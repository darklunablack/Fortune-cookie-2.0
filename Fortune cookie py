print ('Fortune cookie 2.0')

import random
x= input('Do you wanna know your fortune?')
lucky_number=random.randint(1, 100)
fortune= ['You will not die', 'You will get money','Dont leave your house','Help me!! Im trapped in the cookie', 'You ate a dirty cookie HAHA']
rfortune= random.choice(fortune)
if x == ' yes':
    print (f'{rfortune}. Your lucky number: {lucky_number}')
elif x == ' no':
     print ('Fine then! dont know')
else:
     print ('WTF')
     
